# LLM Provider 설정
# 사용 가능: ollama, openai, upstage, anthropic, gemini
LLM_PROVIDER=upstage

# Ollama 설정 (LLM_PROVIDER=ollama일 때)
OLLAMA_MODEL=llama3.2
OLLAMA_HOST=http://localhost:11434

# OpenAI 설정 (LLM_PROVIDER=openai일 때)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Upstage Solar 설정 (LLM_PROVIDER=upstage일 때)
UPSTAGE_API_KEY=your-upstage-api-key
UPSTAGE_MODEL=solar-pro2

# Anthropic 설정 (LLM_PROVIDER=anthropic일 때)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google Gemini 설정 (LLM_PROVIDER=gemini일 때)
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-1.5-flash

# ChromaDB 설정
CHROMA_DB_PATH=./data/chroma

# API 설정
API_HOST=0.0.0.0
API_PORT=8000
